# HTTP Client Configuration
# Base settings
HTTP_BASE_URL=https://api.example.com
HTTP_VERIFY_SSL=true
HTTP_ENABLE_LOGGING=true

# Timeout settings (in seconds)
HTTP_CONNECT_TIMEOUT=10.0
HTTP_READ_TIMEOUT=30.0
HTTP_WRITE_TIMEOUT=30.0
HTTP_POOL_TIMEOUT=10.0

# Connection pool settings
HTTP_MAX_CONNECTIONS=10
HTTP_MAX_KEEPALIVE_CONNECTIONS=5
HTTP_KEEPALIVE_EXPIRY=30.0

# Retry settings
HTTP_MAX_RETRIES=3
HTTP_RETRY_DELAY=1.0
HTTP_BACKOFF_FACTOR=2.0
HTTP_RETRY_STATUS_CODES=429,500,502,503,504

# Rate limiting (requests per second)
HTTP_RATE_LIMIT_RPS=10.0

# Circuit Breaker settings
HTTP_CIRCUIT_BREAKER_ENABLED=false
HTTP_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
HTTP_CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60.0
HTTP_CIRCUIT_BREAKER_FAILURE_STATUS_CODES=500,502,503,504
HTTP_CIRCUIT_BREAKER_SUCCESS_THRESHOLD=2

# Authentication settings
# Choose one authentication type: none, basic, bearer, api_key
HTTP_AUTH_TYPE=none

# Basic authentication
HTTP_USERNAME=
HTTP_PASSWORD=

# Bearer token authentication
HTTP_TOKEN=

# API key authentication
HTTP_API_KEY=
HTTP_API_KEY_HEADER=X-API-Key

# Custom headers (prefix with HTTP_HEADER_)
# Example: HTTP_HEADER_X_CUSTOM_HEADER=value
HTTP_HEADER_X_REQUEST_ID=
HTTP_HEADER_X_CLIENT_VERSION=1.0.0

# Certificate settings (optional)
# CA certificate for server verification
HTTP_CA_CERT_FILE=
HTTP_CA_CERT_DATA=

# Client certificates for mutual TLS
HTTP_CLIENT_CERT_FILE=
HTTP_CLIENT_KEY_FILE=
HTTP_CLIENT_CERT_DATA=
HTTP_CLIENT_KEY_DATA=

# Certificate validation options
HTTP_CHECK_HOSTNAME=true
HTTP_CERT_REQS=CERT_REQUIRED
HTTP_SSL_VERSION=
HTTP_CIPHERS=
HTTP_CERT_VERIFY_MODE=

# Service-specific configurations
# For multiple services, use service-specific prefixes
# Example for a "user" service:
# USER_BASE_URL=https://user-api.example.com
# USER_API_KEY=your_user_api_key
# USER_AUTH_TYPE=api_key
# USER_CIRCUIT_BREAKER_ENABLED=true
# USER_CIRCUIT_BREAKER_FAILURE_THRESHOLD=3

# Example for an "order" service:
# ORDER_BASE_URL=https://order-api.example.com
# ORDER_TOKEN=your_order_bearer_token
# ORDER_AUTH_TYPE=bearer
# ORDER_CIRCUIT_BREAKER_ENABLED=true
# ORDER_CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30.0

# Example for a "payment" service:
# PAYMENT_BASE_URL=https://payment-api.example.com
# PAYMENT_USERNAME=payment_user
# PAYMENT_PASSWORD=payment_password
# PAYMENT_AUTH_TYPE=basic
# PAYMENT_CIRCUIT_BREAKER_ENABLED=true
# PAYMENT_CIRCUIT_BREAKER_FAILURE_THRESHOLD=2

# Example for a "secure" service with certificates:
# SECURE_BASE_URL=https://secure-api.example.com
# SECURE_CA_CERT_FILE=/path/to/ca-cert.pem
# SECURE_CLIENT_CERT_FILE=/path/to/client-cert.pem
# SECURE_CLIENT_KEY_FILE=/path/to/client-key.pem
# SECURE_SSL_VERSION=TLSv1_2
# SECURE_CIPHERS=ECDHE-RSA-AES256-GCM-SHA384
